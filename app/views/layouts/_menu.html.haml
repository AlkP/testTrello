%nav{ class: 'navbar navbar-default navbar-fixed-top', role: 'navigation' }
  %div{ class: 'navbar-header'}
    %button.some{ type: 'button', class: 'navbar-toggle', 'data-toggle': 'collapse', 'data-target': '#bs-example-navbar-collapse-1' }
      %span{ class: 'sr-only' } Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand.some{ href: root_path } Dashboard
  %div{ class: 'collapse navbar-collapse', id: 'bs-example-navbar-collapse-1'}
    %ul.some{ class: 'nav navbar-nav'}
      %li{ class: 'dropdown active' }
        %a.dropdown-toggle{ href: '#', 'data-toggle': 'dropdown' }
          Projects
          %strong.caret
          %ul.dropdown-menu
            %li
              = link_to t('.point1'), "#"
            %li.active
              = link_to t('.point2'), "#"
    %ul{ class: 'nav navbar-nav navbar-right' }
      - if user_signed_in?
        %li.dropdown
          %a{ href: '#', class: 'dropdown-toggle', 'data-toggle': 'dropdown' }
            = show_name
            %strong{ class: 'caret' }
          %ul.dropdown-menu
            %li
              = link_to t('.change'), edit_user_registration_path
            %li.divider
            %li
              = link_to t('.logout'), destroy_user_session_path, method: :delete
      - else
        %li
          = link_to t('.login'), new_user_session_path
