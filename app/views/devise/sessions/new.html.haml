%div.col-md-4
%div.col-md-4
  %div.form-group
    %div.col-sm-offset-4.col-sm-10
      %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal', role: 'form') do |f|
    %div.form-group
      %label.col-sm-4.control-label{ for: 'user_email' }
        Email
      %div.col-sm-8
        = f.email_field :email, class: 'form-control', autofocus: true
    %div.form-group
      %label.col-sm-4.control-label{ for: 'user_password' }
        Password
      %div.col-sm-8
        = f.password_field :password, class: 'form-control', autocomplete: "off"
    - if devise_mapping.rememberable?
      %div.form-group
        %div.col-sm-offset-4.col-sm-10
          = f.check_box :remember_me
          = f.label :remember_me
    .actions
      %div.form-group
        %div.col-sm-offset-4.col-sm-10
          = f.submit "Log in", class: 'btn btn-primary'

%div.col-md-4
  = render "devise/shared/links"

