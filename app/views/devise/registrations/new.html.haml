%div.col-md-4
%div.col-md-4
  %div.form-group
    %div.col-sm-offset-4.col-sm-10
      %h2 Sign Up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal', role: 'form') do |f|
    %div.form-group
      %label.col-sm-4.control-label{ for: 'user_email' }
        Email
      %div.col-sm-8
        = f.email_field :email, class: 'form-control', autofocus: true
    %div.form-group
      %label.col-sm-4.control-label{ for: 'user_password' }
        Password
      %div.col-sm-8
        = f.password_field :password, class: 'form-control', autocomplete: "off"
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
    %div.form-group
      %label.col-sm-4.control-label{ for: 'user_password_confirmation' }
        Password confirmation
      %div.col-sm-8
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"
    .actions
      %div.form-group
        %div.col-sm-offset-4.col-sm-10
          = f.submit "Sign up", class: 'btn btn-primary'

%div.col-md-4
  = render "devise/shared/links"
